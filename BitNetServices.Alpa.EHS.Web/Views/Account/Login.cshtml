@using Microsoft.AspNetCore.Mvc.Localization

@model BitNetServices.Alpa.EHS.Common.Model.Catalog.UserModel

@inject IViewLocalizer Localizer

@{
    Layout = "_LayoutLogin";
}

<div class="clearfix"></div>
<p class="text-danger">
    @ViewBag.ErrorMessage
</p>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <img src="~/images/logo.png" width="400" height="150" />
        <div class="animate form login_form">
            <section class="login_content">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <h1>&nbsp;</h1>
                    <br />
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @required = "required", placeholder = "Password", type = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Sign In</button>
                    </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />
                        <div>
                            <h1>Powered by <img src="~/images/alpa-logo.png" /></h1>
                            <p>©2020 All Rights Reserved. <a asp-action="Privacy" asp-controller="Home" target="_blank">Privacy</a> and <a target="_blank" asp-controller="Home" asp-action="Terms">Terms</a>.</p>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
<!-- /page content -->
